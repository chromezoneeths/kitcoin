{
	"name": "kitcoin",
	"version": "0.2.0",
	"license": "MIT",
	"scripts": {
		"start": "node ./bin/www",
		"build": "gulp",
		"ci": "gulp ci",
		"package": "gulp pkg",
		"test:internal": "mocha --exit",
		"test": "cat /proc/1/cgroup | grep docker > /dev/null && mocha --exit || bash tests.sh"
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"cookie-parser": "~1.4.4",
		"cron": "^1.8.2",
		"debug": "^4.1.1",
		"ejs": "^3.1.3",
		"express": "^4.17.1",
		"express-ws": "^4.0.0",
		"googleapis": "^52.1.0",
		"http-errors": "^1.7.3",
		"mongodb": "^3.5.9",
		"morgan": "^1.10.0",
		"redis": "^3.0.2",
		"uuid": "^8.1.0",
		"ws": "^7.3.0"
	},
	"devDependencies": {
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "^4.17.4",
		"@types/http-errors": "^1.6.3",
		"@types/mongodb": "^3.5.22",
		"@types/morgan": "^1.9.1",
		"@types/redis": "^2.8.22",
		"@types/uuid": "^8.0.0",
		"@types/ws": "^7.2.5",
		"chai": "^4.2.0",
		"del": "^5.1.0",
		"docker-compose": "^0.23.4",
		"fs-extra": "^9.0.1",
		"gulp": "^4.0.0",
		"gulp-copy": "^4.0.1",
		"gulp-sourcemaps": "^2.6.5",
		"gulp-typescript": "^6.0.0-alpha.1",
		"gulp-xo": "^0.25.0",
		"jest-cli": "^26.0.1",
		"mocha": "^8.0.1",
		"pkg": "^4.4.8",
		"typescript": "^3.9.5",
		"xo": "^0.32.0"
	},
	"xo": {
		"rules": {
			"no-await-in-loop": 0,
			"new-cap": 0,
			"@typescript-eslint/restrict-template-expressions": 0,
			"unicorn/import-index": 0,
			"import/no-useless-path-segments": 0,
			"@typescript-eslint/no-var-requires": 0
		},
		"overrides": [
			{
				"files": "clientJs/*.js",
				"envs": [
					"browser"
				]
			},
			{
				"files": "test/*.test.js",
				"envs": [
					"mocha"
				]
			}
		]
	}
}